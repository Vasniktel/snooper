<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.github.vasniktel.snooper.ui.feed.FeedFragment"
        android:label="@string/feed_page_title"
        tools:layout="@layout/fragment_feed">
        <action
            android:id="@+id/action_feedFragment_to_myProfileFragment"
            app:destination="@id/myProfileFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />
    </fragment>

    <fragment
        android:id="@+id/myProfileFragment"
        android:name="com.github.vasniktel.snooper.ui.myprofile.MyProfileFragment"
        android:label="My Profile"
        tools:layout="@layout/fragment_my_profile">
    </fragment>

    <fragment
        android:id="@+id/userFragment"
        android:name="com.github.vasniktel.snooper.ui.user.UserFragment"
        android:label="User"
        tools:layout="@layout/fragment_user">
        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"
            />
    </fragment>

    <fragment
        android:id="@+id/messageListFragment"
        android:name="com.github.vasniktel.snooper.ui.messagelist.MessageListFragment"
        android:label="Message list"
        tools:layout="@layout/fragment_message_list">
        <action
            android:id="@+id/action_messageListFragment_to_userFragment"
            app:destination="@id/userFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />
    </fragment>

    <fragment
        android:id="@+id/userListFragment"
        android:name="com.github.vasniktel.snooper.ui.userlist.UserListFragment"
        android:label="User List"
        tools:layout="@layout/fragment_user_list">
        <action
            android:id="@+id/action_userListFragment_to_userFragment"
            app:destination="@id/userFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />
    </fragment>

</navigation>